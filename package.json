{
  "name": "vue3-vite-app",
  "version": "1.0.0",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "preview:es": "yarn build && npx servor ./dist ./preview-es.html --browse",
    "preview:umd": "yarn build && npx servor ./dist ./preview-umd.html --browse",
    "help": "vite preview --help",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "lint": "eslint --ext .js,.vue .",
    "clean": "npx rimraf \"./**/?(node_modules|dist|coverage)\""
  },
  "keywords": [],
  "author": {
    "name": "Jason Cubic",
    "email": "jcubic@gmail.com"
  },
  "license": "ISC",
  "dependencies": {
    "vue": "^3.2.26"
  },
  "devDependencies": {
    "@babel/core": "^7.16.7",
    "@babel/plugin-transform-runtime": "^7.16.7",
    "@babel/preset-env": "^7.16.7",
    "@vitejs/plugin-vue": "^2.0.1",
    "@vue/test-utils": "^2.0.0-rc.18",
    "@vue/vue3-jest": "^27.0.0-alpha.4",
    "babel-jest": "^27.4.6",
    "eslint": "^8.6.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-vue": "^8.2.0",
    "jest": "^27.4.6",
    "postcss-html": "^1.3.0",
    "prettier": "^2.5.1",
    "stylelint": "^14.2.0",
    "stylelint-config-recommended-vue": "^1.1.0",
    "stylelint-config-standard-scss": "^3.0.0",
    "vite": "^2.7.10"
  },
  "bundledDependencies": [
    "vite",
    "@vitejs/plugin-vue",
    "vite-plugin-singlefile"
  ],
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true,
      "vue/setup-compiler-macros": true
    },
    "parserOptions": {
      "ecmaVersion": 2020
    },
    "extends": [
      "plugin:vue/vue3-strongly-recommended",
      "eslint-config-airbnb-base"
    ],
    "rules": {
      "no-console": "off",
      "linebreak-style": "off",
      "max-len": [
        "warn",
        {
          "code": 175
        }
      ],
      "vue/singleline-html-element-content-newline": "off",
      "vue/max-attributes-per-line": [
        "error",
        {
          "singleline": {
            "max": 3
          },
          "multiline": {
            "max": 3
          }
        }
      ]
    },
    "overrides": [
      {
        "files": [
          "**/*.spec.js"
        ],
        "env": {
          "jest": true
        }
      }
    ],
    "ignorePatterns": [
      "/dist/**"
    ]
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard-scss",
      "stylelint-config-recommended-vue/scss"
    ],
    "ignoreFiles": [
      "./dist/**",
      "./node_modules/**"
    ]
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ],
    "plugins": [
      "@babel/plugin-transform-runtime"
    ]
  },
  "jest": {
    "testEnvironment": "jsdom",
    "transform": {
      ".*\\.(js)$": "babel-jest",
      ".*\\.(vue)$": "@vue/vue3-jest"
    },
    "moduleFileExtensions": [
      "js",
      "json",
      "vue"
    ]
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "cspell": {
    "version": "0.2",
    "ignorePaths": [],
    "dictionaryDefinitions": [],
    "dictionaries": [],
    "words": [
      "browserslist",
      "importmap",
      "linebreak",
      "servor",
      "singlefile",
      "singleline",
      "stylelint",
      "vite",
      "vitejs"
    ],
    "ignoreWords": [],
    "import": []
  }
}
